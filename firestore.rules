
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow reading college details for signup
    match /collegedetails/{collegeId} {
      allow read: if true;
      allow write: if false; // Should only be written from an admin tool
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Allow users to manage their own connections
    match /users/{userId}/connections/{connectionId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to create an email document.
    // The Trigger Email extension will then process it.
    // Deny read/update/delete to protect user privacy.
    match /mail/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}

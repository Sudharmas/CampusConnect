
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows anyone to read any user profile.
    // Allows any authenticated user to update their own profile.
    // Allows anyone to create a new user document (for signup).
    match /users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Allow any authenticated user to manage their own connections.
      match /connections/{connectedUserId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allows anyone to read or write to the collegedetails collection.
    // This is required for the /admin/add-college page to work without login.
    match /collegedetails/{collegeId} {
        allow read, write: if true;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (for search).
      allow read: if request.auth != null;
      
      // Allow anyone to create a user account (for signup).
      allow create: if true;

      // Only allow a user to update or delete their own document.
      allow update, delete: if request.auth.uid == userId;

      // Allow access to subcollections like 'connections'
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /collegedetails/{collegeId} {
      // Allow anyone to read or create college details (for signup/admin page).
      allow read, create: if true;
    }
  }
}
